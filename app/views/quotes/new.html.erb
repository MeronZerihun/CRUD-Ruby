<br>
<p class="display-4"> Post a Quote </p>
<br>
<%= form_for :post, url: quotes_path do |f| %>
    <% if @quote.errors.any? %>
        <% @quote.errors.full_messages.each do |msg| %> 
            <div class = "alert alert-danger"> <%= msg %> </div>
        <%end%>
    <%end%>
    <p>
        <%=f.label :body%><br>
        <%=f.text_area( :body, {:class => 'form-control'} )%><br>
    </p>

    <p>
        <%=f.label :authorName%><br>
        <%=f.text_field( :authorName, {:class => 'form-control'} )%><br>
    </p>

    <p>
        <%= f.submit({:class => 'btn btn-success'}) %>
    </p>

<% end %>